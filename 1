#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define M 6 /* Число строк матрицы */
#define N 5 /* Число столбцов матрицы */

int main()
{
    int a[M][N];
    int i, j;
    int MIN;

    for(i = 0; i < M; i++)
        for(j = 0; j < N; j++)
            a[i][j] = rand()%100;

    for(i = 0; i < M; i++){
        for(j = 0; j < N; j++)
            printf("%5d", a[i][j]);
        printf("\n");
    }

    for (j=0; j<N; j++) {
        MIN = 100000;
        for (i=0; i<M; i++)
        {
            if (a[i][j] < MIN)
                MIN = a[i][j];
        }
            printf("%d\n", MIN);
    }
return 0;
}
